root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

[*.{js,ts,json,vue,nix,yaml}]
indent_style = space
indent_size = 2

[*.{sql}]
indent_style = space
indent_size = 4

[*.{r,R,Rmd,Rnw}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 8

[*.Makefile]
indent_style = tab
indent_size = 8

[*.{am,in,mk}]
indent_style = tab
indent_size = 8
